<Window x:Class="password.manager.winforms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:password.manager.winforms"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200">
    <Grid>
        <Label x:Name="label" Content="Plain Text Password" HorizontalAlignment="Left" Margin="48,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="plainTextBox" HorizontalAlignment="Left" Height="23" Margin="208,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" KeyUp="plainTextBox_KeyUp"/>
        <Label x:Name="label1" Content="Encrypted Password" HorizontalAlignment="Left" Margin="48,91,0,0" VerticalAlignment="Top" Width="124"/>
        <TextBox x:Name="encryptedTextBox" HorizontalAlignment="Left" Height="23" Margin="208,92,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" KeyUp="encryptedTextBox_KeyUp"/>
        <TextBox x:Name="decryptedTextBox"  HorizontalAlignment="Left" Height="23" Margin="208,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" RenderTransformOrigin="-0.033,0.565" TextChanged="decryptedTextBox_TextChanged" LostFocus="decryptedTextBox_LostFocus"/>
        <Button x:Name="decryptButton" Content="Decrypt" HorizontalAlignment="Left" Margin="208,120,0,0" VerticalAlignment="Top" Width="75" Click="decryptButton_Click"/>
        <Button x:Name="encryptButton" Content="Encrypt" HorizontalAlignment="Left" Margin="288,120,0,0" VerticalAlignment="Top" Width="75" Click="encryptButton_Click"/>
        <Button x:Name="clearAllButton" Content="Clear All" HorizontalAlignment="Left" Margin="368,120,0,0" VerticalAlignment="Top" Width="75" Click="clearAllButton_Click"/>
        <Label x:Name="errorLabel"  Content="Error content here" HorizontalAlignment="Left" Margin="204,194,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.9,0.423"/>
    </Grid>
</Window>
