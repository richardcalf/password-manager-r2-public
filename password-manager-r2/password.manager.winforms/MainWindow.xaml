<Window x:Class="password.manager.winforms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:password.manager.winforms"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200">
    <Grid>
        <Label x:Name="label" Content="Plain Text Password" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="plainTextBox" HorizontalAlignment="Left" Height="23" Margin="169,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" KeyUp="plainTextBox_KeyUp"/>
        <Label x:Name="label1" Content="Encrypted Password" HorizontalAlignment="Left" Margin="9,41,0,0" VerticalAlignment="Top" Width="124"/>
        <TextBox x:Name="encryptedTextBox" HorizontalAlignment="Left" Height="23" Margin="169,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" KeyUp="encryptedTextBox_KeyUp"/>
        <TextBox x:Name="decryptedTextBox"  HorizontalAlignment="Left" Height="23" Margin="169,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" RenderTransformOrigin="-0.033,0.565" TextChanged="decryptedTextBox_TextChanged" LostFocus="decryptedTextBox_LostFocus"/>
        <Button x:Name="decryptButton" Content="Decrypt" HorizontalAlignment="Left" Margin="169,70,0,0" VerticalAlignment="Top" Width="75" Click="decryptButton_Click"/>
        <Button x:Name="encryptButton" Content="Encrypt" HorizontalAlignment="Left" Margin="249,70,0,0" VerticalAlignment="Top" Width="75" Click="encryptButton_Click"/>
        <Button x:Name="clearAllButton" Content="Clear All" HorizontalAlignment="Left" Margin="329,70,0,0" VerticalAlignment="Top" Width="75" Click="clearAllButton_Click"/>
        <Label x:Name="errorLabel"  Content="Error content here" HorizontalAlignment="Left" Margin="165,581,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.9,0.423" Width="1002"/>
        <Label x:Name="findSiteLabel" Content="Find Site" HorizontalAlignment="Left" Margin="469,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.289,-0.038"/>
        <TextBox x:Name="FindSiteTextBox" HorizontalAlignment="Left" Height="26" Margin="555,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="FindSiteButton" Content="Find" HorizontalAlignment="Left" Margin="822,17,0,0" VerticalAlignment="Top" Width="75" Click="FindSiteButton_Click"/>
        <Label x:Name="label2" Content="Site" HorizontalAlignment="Left" Margin="469,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.474,0.462" Width="56"/>
        <TextBox x:Name="SiteTextBox" HorizontalAlignment="Left" Height="23" Margin="555,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="224"/>
        <Label x:Name="UserNamelabel" Content="User Name" HorizontalAlignment="Left" Margin="469,104,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameTextBox" HorizontalAlignment="Left" Height="23" Margin="555,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="224"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="469,165,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.263,0.462"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="23" Margin="555,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="822,186,0,0" VerticalAlignment="Top" Width="75" Click="UpdateButton_Click"/>
        <Label x:Name="SiteNotfoundlabel3" Content="" HorizontalAlignment="Left" Margin="555,45,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ClearSearchButton" Content="Clear Search" HorizontalAlignment="Left" Margin="921,17,0,0" VerticalAlignment="Top" Width="75" Click="ClearSearchButton_Click"/>
        <Button x:Name="ClearDataButton" Content="Clear Data" HorizontalAlignment="Left" Margin="822,154,0,0" VerticalAlignment="Top" Width="75" Click="ClearDataButton_Click"/>
        <Label x:Name="UpdateErrorlabel" Content="" HorizontalAlignment="Left" Margin="822,211,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="SaveAlreadyEncryptedCheckBox" IsChecked="True" Content="Save already encrypted" HorizontalAlignment="Left" Margin="555,142,0,0" VerticalAlignment="Top" Width="224" Checked="SaveAlreadyEncryptedCheckBox_Checked" Click="SaveAlreadyEncryptedCheckBox_Click"/>
        <ListBox x:Name="SiteListBox" HorizontalAlignment="Left" Height="376" Margin="229,123,0,0" VerticalAlignment="Top" Width="175" MouseDown="SiteListBox_MouseDown"/>
    </Grid>
</Window>
